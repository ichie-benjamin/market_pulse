# Server config
PORT=3000
NODE_ENV=development

# Logging configuration
LOG_LEVEL=info
LOG_FORMAT=pretty
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7
LOG_CONSOLE_ENABLED=true

# Redis config
REDIS_URL=redis://localhost:6379
REDIS_KEY_PREFIX=market:
REDIS_CACHE_EXPIRY=3600

# Authentication
API_AUTH_ENABLED=true
API_KEYS=dev-key-1,dev-key-2,your-secret-api-key-here

# CORS and Access Control
URL_CHECK_ENABLED=false
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Provider selection for each category
CRYPTO_PROVIDER=cexio
STOCKS_PROVIDER=financialmodelingprep
FOREX_PROVIDER=financialmodelingprep
INDICES_PROVIDER=financialmodelingprep
COMMODITIES_PROVIDER=financialmodelingprep

# Provider connection modes (ws or api)
FINANCIALMODELINGPREP_CONNECTION_MODE=api
CEXIO_CONNECTION_MODE=api
COINCAP_CONNECTION_MODE=ws
ALPHAVANTAGE_CONNECTION_MODE=api
FIXER_CONNECTION_MODE=api


# Provider API keys (replace with your actual keys)
FINANCIALMODELINGPREP_API_KEY=6e39eba411ee51caced6ab2be49f987b
COINCAP_API_KEY=
ALPHAVANTAGE_API_KEY=
FIXER_API_KEY=

# Update intervals (ms) for API polling
CRYPTO_UPDATE_INTERVAL=5000
STOCKS_UPDATE_INTERVAL=5000
FOREX_UPDATE_INTERVAL=5000
INDICES_UPDATE_INTERVAL=60000
COMMODITIES_UPDATE_INTERVAL=60000

CEXIO_API_KEY=
