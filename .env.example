# Application
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# API Security - comma-separated list of valid API keys
API_KEYS=key1,key2,key3,dev_test_key

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Redis Data TTL (in seconds)
# How long to keep market data in Redis
REDIS_DATA_TTL=3600

# WebSocket Configuration
WS_PORT=3000
WS_PATH=/market-data

# Provider Selection
# Available options: coincap, alpaca
ACTIVE_PROVIDER=coincap

# Provider Connection Method
# Available options: websocket, api
PROVIDER_CONNECTION_METHOD=websocket

# CoinCap Configuration
COINCAP_API_KEY=your_coincap_api_key
COINCAP_WS_URL=wss://ws.coincap.io/prices?assets=ALL

# Alpaca Configuration
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_API_SECRET=your_alpaca_api_secret
ALPACA_WS_URL=wss://stream.data.alpaca.markets/v2/iex

# Asset Categories to Track (comma-separated)
# Available options: cryptocurrency, stock, forex, commodity, index
ASSET_CATEGORIES=cryptocurrency,stock
